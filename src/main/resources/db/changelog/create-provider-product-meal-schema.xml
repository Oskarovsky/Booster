<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet id="01" author="slyko">

        <createTable tableName="provider">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="city" type="VARCHAR(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="true" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="product">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="energy" type="INT">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="protein" type="double">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="fat" type="double">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="carbs" type="double">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="price" type="double">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="provider" type="int">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="id" baseTableName="product" constraintName="FK_PRODUCT_PROVIDER"
                                 deferrable="false" initiallyDeferred="false" referencedColumnNames="id" referencedTableName="provider" />

        <createTable>
            <column name="id" type="INT">
                <constraints/>
            </column>
        </createTable>



    </changeSet>
</databaseChangeLog>
